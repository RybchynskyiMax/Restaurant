<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>MongoDBRestaurant</display-name>

    <context-param>
        <param-name>MONGODB_HOST</param-name>
        <param-value>localhost</param-value>
    </context-param>
    <context-param>
        <param-name>MONGODB_PORT</param-name>
        <param-value>27017</param-value>
    </context-param>
    <servlet>
        <servlet-name>addFoodServlet</servlet-name>
        <servlet-class>com.epam.lab.Servlets.Dish.AddDishServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteFoodServlet</servlet-name>
        <servlet-class>com.epam.lab.Servlets.Dish.DeleteDishServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateFoodServlet</servlet-name>
        <servlet-class>com.epam.lab.Servlets.Dish.UpdateDishServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>menuAdminServlet</servlet-name>
        <servlet-class>com.epam.lab.Servlets.Menu.MenuAdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addOrderServlet</servlet-name>
        <servlet-class>com.epam.lab.Servlets.Order.AddOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adminServlet</servlet-name>
        <servlet-class>com.epam.lab.Servlets.Order.OrdersAdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ordersClientServlet</servlet-name>
        <servlet-class>com.epam.lab.Servlets.Order.OrdersClientServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteOrderServlet</servlet-name>
        <servlet-class>com.epam.lab.Servlets.Order.DeleteOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateOrderServlet</servlet-name>
        <servlet-class>com.epam.lab.Servlets.Order.UpdateOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>menuClientServlet</servlet-name>
        <servlet-class>com.epam.lab.Servlets.Menu.MenuClientServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>confirmedOrderServlet</servlet-name>
        <servlet-class>com.epam.lab.Servlets.Order.ConfirmedOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addBillServlet</servlet-name>
        <servlet-class>com.epam.lab.Servlets.Bill.AddBillServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>billsAdminServlet</servlet-name>
        <servlet-class>com.epam.lab.Servlets.Bill.BillsAdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>billsClientServlet</servlet-name>
        <servlet-class>com.epam.lab.Servlets.Bill.BillsClientServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteBillServlet</servlet-name>
        <servlet-class>com.epam.lab.Servlets.Bill.DeleteBillServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>changeRoleServlet</servlet-name>
        <servlet-class>com.epam.lab.Servlets.ChangeRole.ChangeRoleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addFoodServlet</servlet-name>
        <url-pattern>/adddish</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteFoodServlet</servlet-name>
        <url-pattern>/deletedish</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateFoodServlet</servlet-name>
        <url-pattern>/updatemenu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>menuAdminServlet</servlet-name>
        <url-pattern>/menuadmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addOrderServlet</servlet-name>
        <url-pattern>/addorder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adminServlet</servlet-name>
        <url-pattern>/ordersadmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ordersClientServlet</servlet-name>
        <url-pattern>/ordersclient</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteOrderServlet</servlet-name>
        <url-pattern>/deleteorder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateOrderServlet</servlet-name>
        <url-pattern>/updateorder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>menuClientServlet</servlet-name>
        <url-pattern>/menuclient</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>confirmedOrderServlet</servlet-name>
        <url-pattern>/confirmorder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addBillServlet</servlet-name>
        <url-pattern>/addbill</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>billsAdminServlet</servlet-name>
        <url-pattern>/billsadmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>billsClientServlet</servlet-name>
        <url-pattern>/billsclient</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteBillServlet</servlet-name>
        <url-pattern>/deletebill</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>changeRoleServlet</servlet-name>
        <url-pattern>/changerole</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>/views/ChangeRole.jsp</welcome-file>
    </welcome-file-list>

</web-app>